# Mode Configuration
# sim: Simulation mode (no API calls, instant responses)
# hybrid: Use cached responses when available, API for new missions
# real: Always use Claude API for real agent responses
MODE=sim

# Cache Configuration
CACHE_ENABLED=true

# Cost Monitoring
MAX_COST_ALERT=1000
MAX_TOKENS_PER_DAY=100000

# Claude API Configuration (required for hybrid/real modes)
# ANTHROPIC_API_KEY=your_api_key_here
